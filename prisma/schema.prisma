generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "mysql"
   url = env("DATABASE_URL")
}

model User {
   id Int @id @default(autoincrement())
   name String
   email String @unique
   password String
   tasks Task[]
}

model Task {
   id Int @id @default(autoincrement())
   title String
   description String
   completed Boolean @default(false)
   user User @relation(fields: [userId], references: [id])
   userId Int
}